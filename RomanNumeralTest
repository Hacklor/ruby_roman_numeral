require "test/unit"

class RomanNumeralTest < Test::Unit::TestCase

  def test_zero
    assert_equal "", RomanNumeral.new.to_roman(0)
  end

  def test_one
    assert_equal "I", RomanNumeral.new.to_roman(1)
  end

  def test_two
    assert_equal "II", RomanNumeral.new.to_roman(2)
  end

  def test_five
    assert_equal "V", RomanNumeral.new.to_roman(5)
  end
end

class RomanNumeral
  def initialize
    @romans = {5 => "V", 1 => "I"}
  end

  def to_roman(number)
    return "" if number == 0

    @romans.each do |key, value|
      if key == number
        number = number - key
        return value
      end
    end

    "I" + to_roman(number - 1)
  end
end